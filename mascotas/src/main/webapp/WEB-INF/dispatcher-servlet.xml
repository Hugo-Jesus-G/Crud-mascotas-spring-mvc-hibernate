<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- Configuraci칩n del esc치ner de componentes -->
	<context:component-scan
		base-package="com.example.spring.mvc" />

	<context:component-scan
		base-package="com.example.spring.mvc.validation" />
	<!--habilta las anotaciones de spirng mvc @service,cpntroller ect -->
	<mvc:annotation-driven />

	<!-- Configuraci칩n del manejador de vistas -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>


	<!--decirle a spring donde estan los recursos -->

	<mvc:resources location="/recursos/"
		mapping="/recursos/**">


		<!--mapping significa que cualquier solicitud que comience con /recursos/ 
			(por ejemplo, /recursos/estilo.css) se dirigir치 a los archivos ubicados en 
			la ruta especificada en location -->




	</mvc:resources>


	<!-- para manejar los mensajes personalizados en la validacion de fomrularios -->
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames" value="messages" />
    <property name="defaultEncoding" value="UTF-8" />
</bean>










</beans>
